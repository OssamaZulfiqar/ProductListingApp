@model ProductListingApp.Models.Products

@{
    ViewData["Title"] = "Delete";
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .delete-card {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .delete-title {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .delete-message {
        font-size: 18px;
        color: #555;
        margin-bottom: 20px;
    }

    .btn-delete {
        background-color: #dc3545;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-delete:hover {
        background-color: #c82333;
    }

    .btn-back {
        background-color: #6c757d;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-back:hover {
        background-color: #495057;
    }
</style>

<div class="delete-container">
    <div class="delete-card">
        <h2 class="delete-title">Delete Product</h2>
        <p class="delete-message">Are you sure you want to delete this product?</p>
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@Model.Description</dd>
            <dt class="col-sm-3">Price:</dt>
            <dd class="col-sm-9">$@Model.Price</dd>
            <dt class="col-sm-3">Quantity:</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>
            <dt class="col-sm-3">Category:</dt>
            <dd class="col-sm-9">@Model.Category</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-delete">Delete</button>
            <a class="btn btn-back" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
