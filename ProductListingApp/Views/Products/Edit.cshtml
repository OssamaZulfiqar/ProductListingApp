@model ProductListingApp.Models.Products

@{
    ViewData["Title"] = "Edit";
}

<style>
    .edit-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .edit-card {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .edit-title {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
        color: #555;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-save {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .btn-save:hover {
            background-color: #0056b3;
        }

    .btn-back {
        background-color: #6c757d;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .btn-back:hover {
            background-color: #495057;
        }
</style>

<div class="edit-container">
    <div class="edit-card">
        <h2 class="edit-title">Edit Product</h2>
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Description"></label>
                <input class="form-control" asp-for="Description" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Price"></label>
                <input class="form-control" asp-for="Price" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Quantity"></label>
                <input class="form-control" asp-for="Quantity" />
                <span class="text-danger" asp-validation-for="Quantity"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Category"></label>
                <input class="form-control" asp-for="Category" />
                <span class="text-danger" asp-validation-for="Category"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-save">Save</button>
            </div>
        </form>
        <div class="mt-3">
            <a class="btn btn-back" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
